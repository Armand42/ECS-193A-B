<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.speechpreparation">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PlayBack"></activity>

        <activity android:name=".ScriptView"></activity>
        <activity android:name=".GoogleDriveActivity" />
        <activity android:name=".SpeechPerformance" />
        <activity android:name=".SpeechRecord" />
        <activity
            android:name=".NewSpeech"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_new_speech"
            android:parentActivityName=".MainMenu"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.speechpreparation.MainMenu" />
        </activity>
        <activity android:name=".MainMenu">
            <!--android:theme="@style/AppTheme.Launcher">-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpeechView"
            android:exported="true"
            android:parentActivityName=".MainMenu">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenu" />
        </activity>
        <activity
            android:name=".SpeechSettings"
            android:exported="true">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SpeechView" />
        </activity>
    </application>

</manifest>