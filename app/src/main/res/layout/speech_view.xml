<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpeechView">

    <Button
        android:id="@+id/editSettings"
        android:layout_width="421dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="goToSpeechSettings"
        android:text="@string/edit_settings_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewScript" />

    <Button
        android:id="@+id/editScript"
        android:layout_width="421dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="goToEditSpeech"
        android:text="EDIT SCRIPT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSettings" />

    <Button
        android:id="@+id/deleteSpeech"
        android:layout_width="421dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorWarning"
        android:onClick="deleteSpeech"
        android:text="DELETE SPEECH"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editScript"
        app:layout_constraintVertical_bias="0.002" />

    <Button
        android:id="@+id/viewPastRecordings"
        android:layout_width="417dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="578dp"
        android:onClick="goToPlayBack"
        android:text="@string/view_past_recordings_button"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="421dp"
        android:layout_height="60dp"
        android:background="@color/success"
        android:onClick="goToSpeechRecord"
        android:text="@string/start_button"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/viewScript"
        android:layout_width="421dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="goToScriptView"
        android:text="View Script"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPastRecordings" />

    <Button
        android:id="@+id/speechToText"
        android:layout_width="421dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="271dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="311dp"
        android:onClick="goToSpeechToText"
        android:text="SPEECH TO TEXT"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
